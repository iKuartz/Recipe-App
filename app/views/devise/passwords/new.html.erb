<div class="d-flex flex-column mb-2 align-items-center">
  <h2 class="text-secondary my-3">Forgot your password?</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", wrapper: { class: 'text-secondary' } %>
    </div>

    <div class="actions my-3 text-center">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
