<div class="d-flex flex-column mb-2 align-items-center">
  <h2 class="text-secondary my-3">Log in</h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", wrapper: { class: 'text-secondary' } %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", wrapper: { class: 'text-secondary' } %>
    </div>
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me, wrapper: { class: 'text-secondary' } %>
    <% end %>
    <div class="actions my-3 text-center">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>