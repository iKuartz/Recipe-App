<div class="d-flex flex-column mb-2 align-items-center mx-auto w-50">
  <div class="d-flex mb-2">
    <h2 class="mx-3"><%= @inventory.name %></h1>
  </div> 
  <button class= "btn align-self-end">Add Food</button>
  <table class="table table-striped mt-3">
    <thead>
    <tr>
      <th scope="col" class="">Food</th>
      <th scope="col" class="">Quantity</th>
      <th scope="col" class="">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @inventory.inventory_foods.each do |inventory_food| %>
      <tr>
        <td class=""><%= inventory_food.food.name %></td>
        <td class=""><%= "#{inventory_food.quantity} #{inventory_food.food.measurement_unit}" %></td>
        <td class="">
        <%= button_to "Remove", delete_food_path(inventory_food_id: inventory_food.id, inventory_id: @inventory.id), method: :delete, data: {
turbolinks: false,
},html: {class: "btn"} %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
